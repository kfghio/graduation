<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp">

<TextView
    android:id="@+id/text_section_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:textSize="18sp"
    android:gravity="center"
    android:text="Горизонтальные ёмкости"
    android:paddingBottom="8dp"/>

<ViewFlipper
    android:id="@+id/view_flipper"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <!--Горизонтальные -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_cylindrical_tank"
                style="@style/RaisedWhiteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Цилиндрическая ёмкость горизонтальная с плоскими днищами" />

            <Button
                android:id="@+id/button_elliptical_tank"
                style="@style/RaisedWhiteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Цилиндрическая емкость горизонтальная с эллиптическими днищами"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/button_hemispherical_tank"
                style="@style/RaisedWhiteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Цилиндрическая емкость горизонтальная с полусферическими днищами"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/button_arc_tank"
                style="@style/RaisedWhiteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Цилиндрическая емкость горизонтальная с дуговыми днищами"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/button_conical_tank"
                style="@style/RaisedWhiteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Цилиндрическая емкость горизонтальная с конусными днищами"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/button_frustrum_conical_tank"
                style="@style/RaisedWhiteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Цилиндрическая емкость горизонтальная с усеченно-конусными днищами"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/button_rectangular_tank"
                style="@style/RaisedWhiteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Прямоугольная емкость горизонтальная с плоскими днищами"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/button_elliptical_horizontal_tank"
                style="@style/RaisedWhiteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Эллиптическая горизонтальная ёмкость с плоскими днищами"
                android:layout_marginTop="5dp"/>
            <Button
                android:id="@+id/button_elliptical_truncated_tank"
                style="@style/RaisedWhiteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Эллиптическо-усеченная емкость горизонтальная с плоскими днищами"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/button_rounded_rect_tank"
                style="@style/RaisedWhiteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Прямоугольно-округлая емкость горизонтальная с плоскими днищами"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/button_suitcase_tank"
                style="@style/RaisedWhiteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Чемоданная емкость горизонтальная с плоскими днищами"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Вертикальные -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_vertical_cylindrical_tank"
                style="@style/RaisedWhiteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Цилиндрическая ёмкость вертикальная с плоскими днищами"/>

            <Button
                android:id="@+id/button_vertical_frustum_tank"
                style="@style/RaisedWhiteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Цилиндрическая емкость вертикальная с плоским и усеченно-конусным днищем"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/button_vertical_wine_tank"
                style="@style/RaisedWhiteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Винная емкость вертикальная с плоскими днищами"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/button_vertical_rect_frustum_tank"
                style="@style/RaisedWhiteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Прямоугольная емкость вертикальная с плоским и усеченно-пирамидальным днищем"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Прочие -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout_other"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_spherical_tank"
                style="@style/RaisedWhiteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Сферическая ёмкость" />

            <Button
                android:id="@+id/button_vertical_arc_bottom"
                style="@style/RaisedWhiteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вертикальное дуговое днище"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/button_single_cone_tank"
                style="@style/RaisedWhiteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вертикальное конусное днище"
                android:layout_marginTop="5dp"/>

        </LinearLayout>
    </ScrollView>
</ViewFlipper>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <Button
        android:id="@+id/button_prev_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="◀" />

    <Button
        android:id="@+id/button_next_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="▶" />
</LinearLayout>

</LinearLayout>